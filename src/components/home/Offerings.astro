---
import { Icon } from '@lucide/astro';
---

<section class='py-24 bg-gray-50'>
  <div class='container'>
    <div class='max-w-4xl mx-auto'>
      <!-- Section Header -->
      <div class='text-center mb-16'>
        <h2 class='text-4xl md:text-5xl font-bold mb-6 tracking-tight'>What I Offer</h2>
        <p class='text-xl text-gray-600'>Multidisciplinary expertise across three core domains</p>
      </div>

      <!-- Skills Grid -->
      <div class='grid md:grid-cols-2 lg:grid-cols-3 gap-8'>
        <!-- Software Engineering -->
        <div class='bg-white p-8 hover-lift'>
          <div class='h-2 bg-accent-blue w-12 mb-6'></div>
          <h3 class='text-2xl font-bold mb-4'>Software Engineering</h3>
          <ul class='space-y-3 text-gray-600'>
            <li>• Frontend Development</li>
            <li>• Backend Architecture</li>
            <li>• System Design</li>
            <li>• Performance Optimization</li>
            <li>• Technical Leadership</li>
          </ul>
        </div>

        <!-- Music & Sound -->
        <div class='bg-white p-8 hover-lift'>
          <div class='h-2 bg-accent-red w-12 mb-6'></div>
          <h3 class='text-2xl font-bold mb-4'>Music Composition</h3>
          <ul class='space-y-3 text-gray-600'>
            <li>• Original Scores</li>
            <li>• Sound Design</li>
            <li>• Audio Production</li>
            <li>• Digital Composition</li>
            <li>• Musical Direction</li>
          </ul>
        </div>

        <!-- Media & Journalism -->
        <div class='bg-white p-8 hover-lift'>
          <div class='h-2 bg-accent-yellow w-12 mb-6'></div>
          <h3 class='text-2xl font-bold mb-4'>Media Production</h3>
          <ul class='space-y-3 text-gray-600'>
            <li>• Content Strategy</li>
            <li>• Broadcasting</li>
            <li>• Storytelling</li>
            <li>• Editorial Writing</li>
            <li>• Media Analysis</li>
          </ul>
        </div>
      </div>

      <!-- Process Overview -->
      <div class='mt-16 pt-16 border-t'>
        <h3 class='text-2xl font-bold mb-8 text-center'>How I Work</h3>
        <div class='grid md:grid-cols-4 gap-8'>
          <div class='text-center'>
            <div class='w-12 h-12 rounded-full bg-black text-white flex items-center justify-center mx-auto mb-4'>1</div>
            <h4 class='font-bold mb-2'>Discover</h4>
            <p class='text-gray-600 text-sm'>Research & understand the core challenge</p>
          </div>
          <div class='text-center'>
            <div class='w-12 h-12 rounded-full bg-black text-white flex items-center justify-center mx-auto mb-4'>2</div>
            <h4 class='font-bold mb-2'>Ideate</h4>
            <p class='text-gray-600 text-sm'>Design creative solutions & approaches</p>
          </div>
          <div class='text-center'>
            <div class='w-12 h-12 rounded-full bg-black text-white flex items-center justify-center mx-auto mb-4'>3</div>
            <h4 class='font-bold mb-2'>Create</h4>
            <p class='text-gray-600 text-sm'>Build & iterate on the solution</p>
          </div>
          <div class='text-center'>
            <div class='w-12 h-12 rounded-full bg-black text-white flex items-center justify-center mx-auto mb-4'>4</div>
            <h4 class='font-bold mb-2'>Refine</h4>
            <p class='text-gray-600 text-sm'>Polish & perfect the final product</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
