---
import moment from 'moment';
import Bluesky from '../../assets/icons/bluesky.svg';
import Logo from '../../assets/icons/gaulatti.svg';
import GitHub from '../../assets/icons/github.svg';
import Instagram from '../../assets/icons/instagram.svg';
import LinkedIn from '../../assets/icons/linkedin.svg';
import { Mail } from '@lucide/astro';

const now = moment().format('YYYY');
---

<footer transition:name='site-footer' transition:animate='none' class='bg-deep-sea dark:bg-sand text-white'>
  <!-- Natural Decorative Element -->
  <div class='h-[1px] w-full bg-gradient-to-r from-transparent via-sunset/30 to-transparent'></div>

  <div class='container mx-auto px-4 py-20'>
    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-16'>
      <!-- Brand Column -->
      <div class='lg:col-span-2'>
        <Logo class='h-12 w-auto fill-current light:text-white opacity-90 mb-8' />
        <p class='text-sand/90 max-w-md leading-relaxed tracking-refined'>
          Crafting digital experiences that blend precision with poetry. Where engineering meets artistry, creating spaces for reflection, innovation, and the
          quiet appreciation of life's remarkable moments.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class='font-medium tracking-elegant text-sm light:text-sand dark:text-desert mb-8 uppercase'>Navigation</h3>
        <ul class='space-y-4'>
          <li><a href='/' class='text-sand/80 dark:text-text-secondary hover:text-sunset transition-colors duration-400'>Home</a></li>
          <li><a href='/blog' class='text-sand/80 dark:text-text-secondary hover:text-sunset transition-colors duration-400'>Blog</a></li>
          <li><a href='/portfolio' class='text-sand/80 dark:text-text-secondary hover:text-sunset transition-colors duration-400'>Portfolio</a></li>
          <li><a href='/contact' class='text-sand/80 dark:text-text-secondary hover:text-sunset transition-colors duration-400'>Contact</a></li>
        </ul>
      </div>

      <!-- Social Links -->
      <div>
        <h3 class='font-medium tracking-elegant text-sm light:text-sand dark:text-desert mb-8 uppercase'>Connect</h3>
        <ul class='space-y-4 fill-current text-sand/80 dark:text-text-secondary'>
          <li>
            <a
              href='https://github.com/gaulatti'
              class='flex items-center gap-3 hover:text-sunset transition-colors duration-400 group'
              target='_blank'
              rel='noopener noreferrer'
            >
              <GitHub class='w-5 h-5 opacity-80 group-hover:opacity-100 transition-opacity duration-400' />
              <span class='tracking-refined'>GitHub</span>
            </a>
          </li>
          <li>
            <a
              href='https://bsky.app/profile/gaulatti.com'
              class='flex items-center gap-3 hover:text-sunset transition-colors duration-400 group'
              target='_blank'
              rel='noopener noreferrer'
            >
              <Bluesky class='w-5 h-5 opacity-80 group-hover:opacity-100 transition-opacity duration-400' />
              <span class='tracking-refined'>Bluesky</span>
            </a>
          </li>
          <li>
            <a
              href='https://instagram.com/gaulatti'
              class='flex items-center gap-3 hover:text-sunset transition-colors duration-400 group'
              target='_blank'
              rel='noopener noreferrer'
            >
              <Instagram class='w-5 h-5 opacity-80 group-hover:opacity-100 transition-opacity duration-400' />
              <span class='tracking-refined'>Instagram</span>
            </a>
          </li>
          <li>
            <a
              href='https://linkedin.com/in/gaulatti'
              class='flex items-center gap-3 hover:text-sunset transition-colors duration-400 group'
              target='_blank'
              rel='noopener noreferrer'
            >
              <LinkedIn class='w-5 h-5 opacity-80 group-hover:opacity-100 transition-opacity duration-400' />
              <span class='tracking-refined'>LinkedIn</span>
            </a>
          </li>
          <li>
            <a
              href='mailto:jack@gaulatti.com'
              class='flex items-center gap-3 hover:text-sunset transition-colors duration-400 group'
              target='_blank'
              rel='noopener noreferrer'
            >
              <Mail class='w-5 h-5 opacity-80 group-hover:opacity-100 transition-opacity duration-400' />
              <span class='tracking-refined'>Email</span>
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class='border-t border-sand/10 mt-20 pt-8 flex flex-col md:flex-row justify-between items-center'>
      <div class='text-sm text-sand/60 tracking-refined'>
        © {now} Javier Godoy Núñez. All rights reserved.
      </div>
    </div>
  </div>

  <!-- Natural Bottom Accent -->
  <div class='h-1 w-full bg-gradient-to-r from-desert via-sunset to-sea opacity-80'></div>
</footer>
