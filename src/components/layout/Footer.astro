---
import moment from 'moment';
import Bluesky from '../../assets/icons/bluesky.svg';
import Logo from '../../assets/icons/gaulatti.svg';
import GitHub from '../../assets/icons/github.svg';
import Instagram from '../../assets/icons/instagram.svg';
import LinkedIn from '../../assets/icons/linkedin.svg';
import { Mail } from '@lucide/astro';

const now = moment().format('YYYY');
---

<footer class='bg-black text-white'>
  <!-- Geometric Bauhaus-inspired decorative element -->
  <div class='h-2 w-full grid grid-cols-3'>
    <div class='bg-accent-red'></div>
    <div class='bg-accent-blue'></div>
    <div class='bg-accent-yellow'></div>
  </div>

  <div class='container mx-auto px-4 py-16'>
    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12'>
      <!-- Brand Column -->
      <div class='lg:col-span-2'>
        <Logo class='h-12 w-auto fill-current text-white mb-6' />
        <p class='text-gray-400 max-w-md'>
          Crafting digital experiences at the intersection of code, sound, and storytelling. Let's create something remarkable together.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class='font-bold mb-6'>Navigation</h3>
        <ul class='space-y-3'>
          <li><a href='/' class='text-gray-400 hover:text-white transition-colors'>Home</a></li>
          <li><a href='/blog' class='text-gray-400 hover:text-white transition-colors'>Blog</a></li>
          <li><a href='/portfolio' class='text-gray-400 hover:text-white transition-colors'>Portfolio</a></li>
          <li><a href='/contact' class='text-gray-400 hover:text-white transition-colors'>Contact</a></li>
        </ul>
      </div>

      <!-- Social Links -->
      <div>
        <h3 class='font-bold mb-6'>Connect</h3>
        <ul class='space-y-3 fill-current text-gray-400'>
          <li>
            <a href='https://github.com/gaulatti' class='flex items-center gap-2 hover:text-white transition-colors' target='_blank' rel='noopener noreferrer'>
              <GitHub class='w-5 h-5' />
              <span>GitHub</span>
            </a>
          </li>
          <li>
            <a
              href='https://bsky.app/profile/gaulatti.com'
              class='flex items-center gap-2 hover:text-white transition-colors'
              target='_blank'
              rel='noopener noreferrer'
            >
              <Bluesky class='w-5 h-5' />
              <span>Bluesky</span>
            </a>
          </li>
          <li>
            <a
              href='https://instagram.com/gaulatti'
              class='flex items-center gap-2 hover:text-white transition-colors'
              target='_blank'
              rel='noopener noreferrer'
            >
              <Instagram class='w-5 h-5' />
              <span>Instagram</span>
            </a>
          </li>
          <li>
            <a
              href='https://linkedin.com/in/gaulatti'
              class='flex items-center gap-2 hover:text-white transition-colors'
              target='_blank'
              rel='noopener noreferrer'
            >
              <LinkedIn class='w-5 h-5' />
              <span>LinkedIn</span>
            </a>
          </li>
          <li>
            <a href='mailto:javier@oxozon.io' class='flex items-center gap-2 hover:text-white transition-colors' target='_blank' rel='noopener noreferrer'>
              <Mail class='w-5 h-5' />
              <span>Email</span>
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class='border-t border-white/10 mt-16 pt-8 flex flex-col md:flex-row justify-between items-center'>
      <div class='text-sm text-gray-400 mb-4 md:mb-0'>
        © {now} Javier Godoy Núñez. All rights reserved.
      </div>
    </div>
  </div>
</footer>
